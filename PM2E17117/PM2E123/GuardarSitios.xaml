<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E123.GuardarSitios">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="PM2E17117" HorizontalOptions="Center" />
                <Label Text="Ingresar el Sitio" FontSize="35" HorizontalOptions="Center"/>


                <Label FontSize="20" >
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Latitud: "/>
                                <Span x:Name="lbllatitud"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label FontSize="20" >
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Longitud: "/>
                                <Span x:Name="lbllongitud" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Entry Placeholder="Ingresa la Direccion del Sitio" x:Name="direccion" MaxLength="80" />
                <Label Text="Imagen" />

                <Image Source="" x:Name="imagen" HorizontalOptions="Center" HeightRequest="70" WidthRequest="60" />

                <Button Text="Tomar Foto" x:Name="btncargarimg" Clicked="btncargarimg_Clicked" />
                <Label Text="" />
                <Button Text="Agregar" x:Name="btnRegis" Clicked="btnRegis_Clicked" />
                <Button Text="Lista Sitios" x:Name="btnList" Clicked="btnList_Clicked" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>


</ContentPage>